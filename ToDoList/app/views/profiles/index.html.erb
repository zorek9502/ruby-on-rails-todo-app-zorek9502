
<% if user_signed_in? %>
    <div class="jumbotron jumbotron-fluid my-4">
      <div class="container d-flex justify-content-center">
        <% if current_user.avatar.attached? %>
            <%= image_tag current_user.avatar, width:150, height:150,class:"rounded-circle" %>
        <% else %>
            <%= image_tag "default-profile-picture.jpg", width:150, height:150, class:"rounded-circle"%>
        <% end %>  
      </div>
      <div class="container d-flex flex-column justify-content-center align-items-center">
        <p class="display-4 font-weight-light">
          <%= current_user.username %>
        </p>
        <h5 class="font-weight-light">
          <%= current_user.email %>
        </h5>
      </div>
      <div class="card mx-5 bg-light">
         <div class="card-body">
          <p class="card-text"><%= current_user.description %></p>
         </div>
      </div>

      <div class="d-flex justify-content-around my-5">
        <%= link_to 'Edit', edit_user_registration_path, class: " btn btn-info" %>
      </div>
    </div>
    
    <% else %>

    <div class="jumbotron jumbotron-fluid my-4 bg-dark text-white">
      <div class="container">        
        <h1 class="display-4 my-4">Â¡Hello!</h1> 
        
        <h3 class="display-6 my-4">Welcome to TO DO List App</h3> 
        <p class="lead">Already have an account?</p>
        <%= link_to 'Log In', user_session_path, class: 'nav-link btn btn-lg btn-block btn-success my-4' %>


        <p class="lead">Don't have an account?</p>
        <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link btn btn-lg btn-block btn-primary' %>


      </div>
    </div>

<% end %>

