<div class="jumbotron jumbotron-fluid text-center">
  <div class="container">
    <h1 class="display-4"><%=@task_list.title%></h1>
    <%= link_to "Delete", @task_list, method: :delete,  class: "btn btn-outline-danger" %>
    <hr/>
    <% @tasks.each do |task|%>
    <ul class="list-group text-left">
        <% if task.completed %>
          <li class="list-group-item list-group-item-success d-flex justify-content-between align-items-center lead mt-3 ">
            <%= task.description%>
            <%= link_to "Edit",  edit_task_list_task_path(@task_list, task), class: "btn btn-info" %>
          </li>                    
        <% else %>
          <li class="list-group-item  d-flex justify-content-between align-items-center lead mt-3">
              <%= task.description%>
              <%= link_to "Edit",  edit_task_list_task_path(@task_list, task), class: "btn btn-info" %>
          </li>          
        <% end %>
    </ul>
    <%end%>
  </div>

    
  <%= link_to  "Add task", new_task_list_task_path(@task_list), class: "btn btn-success text-center mt-5" %>
</div>